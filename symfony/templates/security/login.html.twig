{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="login-container">
        <form method="post">
          <h1 class="login-title">
            <i class="fas fa-sign-in-alt me-2" style="color: var(--color-button);"></i>
            Connexion
          </h1>
          <p class="login-subtitle">Connectez-vous à votre compte pour accéder à vos blagues</p>
          
          {% if error %}
            <div class="alert alert-danger mb-4" role="alert">
              <i class="fas fa-exclamation-triangle me-2"></i>
              {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
          {% endif %}

          {% if app.user %}
            <div class="alert alert-info mb-4" role="alert">
              <i class="fas fa-info-circle me-2"></i>
              Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong><br> 
              <a href="{{ path('app_logout') }}" class="login-link">Se déconnecter</a>
            </div>
          {% endif %}

          <div class="mb-3">
            <label for="inputEmail" class="form-label">
              <i class="fas fa-envelope me-2"></i>Adresse email
            </label>
            <input type="email" 
                   value="{{ last_username }}" 
                   name="email" 
                   id="inputEmail" 
                   class="form-control" 
                   autocomplete="email" 
                   required 
                   placeholder="votre@email.com" 
                   autofocus>
          </div>

          <div class="mb-4">
            <label for="inputPassword" class="form-label">
              <i class="fas fa-lock me-2"></i>Mot de passe
            </label>
            <input type="password" 
                   name="password" 
                   id="inputPassword" 
                   class="form-control" 
                   autocomplete="current-password" 
                   required 
                   placeholder="Votre mot de passe">
          </div>

          <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
       
          <div class="custom-checkbox">
            <input type="checkbox" value="" name="_remember_me" id="rememberMe">
            <label for="rememberMe" class="custom-checkbox-label">
              <span class="custom-checkbox-box"></span>
              Se souvenir de moi sur cet appareil
            </label>
          </div>

          <button class="btn btn-primary w-100 mb-4" type="submit">
            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
          </button>

          <div class="text-center">
            <small class="text-muted">
              Pas encore de compte ? 
              <a href="{{ path('app_register') }}" class="login-link">Créez-en un ici</a>
            </small>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
