{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1 class="mb-4">Toutes les blagues</h1>
<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <select name="category" class="form-select" onchange="this.form.submit()">
            <option value="">Toutes les catégories</option>
            {% for category in categories %}
                <option value="{{ category.id }}" {% if currentCategory == category.id %}selected{% endif %}>{{ category.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="col-md-3">
        <input type="number" name="minPrice" class="form-control" placeholder="Prix min" value="{{ minPrice }}">
    </div>
    <div class="col-md-3">
        <input type="number" name="maxPrice" class="form-control" placeholder="Prix max" value="{{ maxPrice }}">
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filtrer</button>
    </div>
</form>
<div class="row">
    {% for joke in jokes %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                {% if joke.photo %}
                    <img src="{{ joke.photo }}" class="card-img-top" alt="{{ joke.title }}">
                {% endif %}
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ joke.title }}</h5>
                    <p class="card-text">{{ joke.bodyText|u.truncate(100, '...') }}</p>
                    <div class="mt-auto">
                        {% if joke.price %}
                            <p class="fw-bold">{{ joke.price }} €</p>
                        {% endif %}
                        <a href="{{ path('shop_detail', {id: joke.id}) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <p>Aucune blague trouvée.</p>
    {% endfor %}
</div>
{% endblock %}
