{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1 class="mb-4">Toutes les blagues</h1>
<div class="row">
    {% for joke in jokes %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                {% if joke.photo %}
                    <img src="{{ joke.photo }}" class="card-img-top" alt="{{ joke.title }}">
                {% endif %}
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ joke.title }}</h5>
                    <p class="card-text">{{ joke.bodyText|u.truncate(100, '...') }}</p>
                    <div class="mt-auto">
                        {% if joke.price %}
                            <p class="fw-bold">{{ joke.price }} €</p>
                        {% endif %}
                        <a href="{{ path('shop_detail', {id: joke.id}) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <p>Aucune blague trouvée.</p>
    {% endfor %}
</div>
{% endblock %}
