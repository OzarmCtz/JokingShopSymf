                                <label for="address" class="form-label">Adresse *</label>
                                <input type="text" class="form-control" id="address" 
                                       value="{{ app.user ? app.user.address : '' }}"
                                       list="address-suggestions" required>
                                <datalist id="address-suggestions"></datalist>
