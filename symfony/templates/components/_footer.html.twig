<footer class="footer-custom mt-5">
    <div class="container">
        <div class="row">
            {# Colonne principale #}
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="footer-brand">
                    <img src="{{asset('images/joke.png')}}" alt="Jo.King" class="footer-logo me-2">
                    <h5 class="footer-title">Jo.King</h5>
                </div>
                <p class="footer-description">
                    Découvrez notre collection de blagues hilarantes pour tous les goûts. 
                    Riez sans modération et partagez la bonne humeur !
                </p>
                <div class="footer-social">
                    <a href="#" class="social-link" aria-label="Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="Twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="LinkedIn">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </div>
            
            {# Navigation rapide #}
            <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                <h6 class="footer-section-title">Navigation</h6>
                <ul class="footer-links">
                    <li><a href="{{ path('shop_home') }}">Accueil</a></li>
                    <li><a href="{{ path('shop_home') }}">Toutes les blagues</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('app_account') }}">Mon compte</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                </ul>
            </div>
            
            {# Catégories populaires #}
            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                <h6 class="footer-section-title">Catégories</h6>
                <ul class="footer-links">
                    {% for category in global_categories|slice(0, 5) %}
                        <li>
                            <a href="{{ path('shop_home', {'category': category.id}) }}">
                                <i class="{{ category.icon }} me-1"></i>{{ category.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            
            {# Contact & Infos #}
            <div class="col-lg-3 col-md-6">
                <h6 class="footer-section-title">Contact</h6>
                <ul class="footer-contact">
                    <li>
                        <i class="fas fa-envelope me-2"></i>
                        <a href="mailto:contact@joking.com">contact@joking.com</a>
                    </li>
                    <li>
                        <i class="fas fa-phone me-2"></i>
                        <a href="tel:+33123456789">+33 1 23 45 67 89</a>
                    </li>
                    <li>
                        <i class="fas fa-map-marker-alt me-2"></i>
                        <span>Paris, France</span>
                    </li>
                </ul>
            </div>
        </div>
        
        <hr class="footer-divider">
        
