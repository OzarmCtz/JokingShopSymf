<footer class="footer-custom mt-5">
    <div class="container">
        <div class="row">
            {# Colonne principale #}
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="footer-brand">
                    <img src="{{asset('images/joke.png')}}" alt="{{ app_settings.companyName }}" class="footer-logo me-2" loading="lazy">
                    <h5 class="footer-title">{{ app_settings.companyName }}</h5>
                </div>
                <p class="footer-description">
                    Découvrez notre collection de blagues hilarantes pour tous les goûts. 
                    Riez sans modération et partagez la bonne humeur !
                </p>
                <div class="footer-social">
                    {% if app_settings.socialFacebook %}
                    <a href="{{ app_settings.socialFacebook }}" class="social-link" aria-label="Facebook" target="_blank">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    {% endif %}
                    {% if app_settings.socialTwitter %}
                    <a href="{{ app_settings.socialTwitter }}" class="social-link" aria-label="Twitter" target="_blank">
                        <i class="fab fa-twitter"></i>
                    </a>
                    {% endif %}
                    {% if app_settings.socialInstagram %}
                    <a href="{{ app_settings.socialInstagram }}" class="social-link" aria-label="Instagram" target="_blank">
                        <i class="fab fa-instagram"></i>
                    </a>
                    {% endif %}
                    {% if app_settings.socialLinkedin %}
                    <a href="{{ app_settings.socialLinkedin }}" class="social-link" aria-label="LinkedIn" target="_blank">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    {% endif %}
                </div>
            </div>
            
            {# Navigation rapide #}
            <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                <h6 class="footer-section-title">Navigation</h6>
                <ul class="footer-links">
                    <li><a href="{{ path('shop_home') }}">Accueil</a></li>
                    <li><a href="{{ path('shop_home') }}">Toutes les blagues</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('app_account') }}">Mon compte</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                </ul>
            </div>
            
            {# Catégories populaires #}
            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                <h6 class="footer-section-title">Catégories</h6>
                <ul class="footer-links">
                    {% for category in global_categories|slice(0, 5) %}
                        <li>
                            <a href="{{ path('shop_home', {'category': category.id}) }}">
                                <i class="{{ category.icon }} me-1"></i>{{ category.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            
            {# Contact & Infos #}
            <div class="col-lg-3 col-md-6 footer-contact-section">
                <h6 class="footer-section-title">Contact</h6>
                <ul class="footer-contact">
                    <li>
                        <i class="fas fa-envelope me-2"></i>
                        <a href="mailto:{{ app_settings.contactEmail }}">{{ app_settings.contactEmail }}</a>
                    </li>
                    {% if app_settings.contactPhone %}
                    <li>
                        <i class="fas fa-phone me-2"></i>
                        <a href="tel:{{ app_settings.contactPhone }}">{{ app_settings.contactPhone }}</a>
                    </li>
                    {% endif %}
                    <li>
                        <i class="fas fa-map-marker-alt me-2"></i>
                        <span>{{ app_settings.companyCity }}, {{ app_settings.companyCountry }}</span>
                    </li>
                    {% if app_settings.supportHours %}
                    <li>
                        <i class="fas fa-clock me-2"></i>
                        <span>{{ app_settings.supportHours }}</span>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
        
        <hr class="footer-divider">
        
        {# Copyright #}
        <div class="row">
            <div class="col-md-6">
                <p class="footer-copyright">
                    © {{ "now"|date("Y") }} {{ app_settings.companyName }}. Tous droits réservés.
                </p>
            </div>
            <div class="col-md-6">
                <ul class="footer-legal">
                    <li><a href="{{ path('legal_mentions') }}">Mentions légales</a></li>
                    <li><a href="{{ path('legal_privacy') }}">Politique de confidentialité</a></li>
                    <li><a href="{{ path('legal_terms') }}">CGU</a></li>
                    <li><a href="{{ path('legal_sales') }}">CGV</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>
