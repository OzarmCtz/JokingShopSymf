<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Shop{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <style>
            :root{
                --bg-primary:#2B2D31; --bg-media:#1E1F22; --line:#3F4147;
                --text:#DBDEE1; --muted:#B5BAC1;
                --sort-btn-w: 180px;
            }

            /* Style global pour les icônes de sélection */
            .jk-check { 
                color: var(--muted); 
                margin-left: 8px; 
            }

            /* Styles communs pour les dropdown afin d'uniformiser avec la page home */
            .jk-dropdown-toggle {
                background: none !important;
                border: none !important;
                color: inherit !important;
                text-decoration: none !important;
                padding: 0.5rem 1rem !important;
                border-radius: 6px !important;
                transition: background-color 0.2s ease !important;
            }

            .jk-dropdown-toggle:hover {
                background-color: #29292d !important;
                color: var(--text) !important;
            }

            .jk-dropdown-toggle:focus,
            .jk-dropdown-toggle:focus-visible {
                outline: none !important;
                box-shadow: none !important;
            }

            /* Navbar dropdown: exactement le même style que la page home */
            .navbar .jk-menu {
                background: var(--bg-primary);
                border: 1px solid var(--line);
                border-radius: 8px;
                padding: .5rem;
                min-width: var(--sort-btn-w);
            }

            .navbar .jk-menu .dropdown-item {
                color: var(--text);
                border-radius: 6px;
                padding: .55rem .75rem;
                display:flex; justify-content:space-between; align-items:center;
                transition: background-color 0.2s ease;
            }

            .navbar .jk-menu .dropdown-item:hover,
            .navbar .jk-menu .dropdown-item:active,
            .navbar .jk-menu .dropdown-item:focus {
                background:#29292d;
                color: var(--text);
                outline:none !important;
                box-shadow:none !important;
            }

            .navbar .jk-menu .dropdown-divider {
                margin: 0.5rem 0;
                border-color: var(--line);
            }
        </style>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-4">
            <div class="container">
                <a class="navbar-brand fw-semibold" href="{{ path('shop_home') }}">
                    <i class="fas fa-store me-2"></i>Jo.King
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto"> 
                     <li class="nav-item dropdown">
                        <button
                            class="nav-link dropdown-toggle btn btn-link px-0 jk-dropdown-toggle"
                            id="categoriesDropdown"
                            type="button"
                            data-bs-toggle="dropdown"
                            data-bs-display="static"
                            data-bs-auto-close="outside"
                            aria-expanded="false">
                            Parcourir
                        </button>
                        <ul class="dropdown-menu jk-menu" aria-labelledby="categoriesDropdown">
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center" href="{{ path('shop_home') }}">
                                    <span><i class="fas fa-th-large me-2"></i>Toutes les catégories</span>
                                    {% if not app.request.query.get('category') %}<i class="fa-solid fa-check jk-check"></i>{% endif %}
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            {% for category in global_categories ?? [] %}
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center" href="{{ path('shop_home', {'category': category.id}) }}">
                                    <span><i class="fas fa-tag me-2"></i>{{ category.name }}</span>
                                    {% if app.request.query.get('category') == category.id %}<i class="fa-solid fa-check jk-check"></i>{% endif %}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('shop_cart') }}">
                                <i class="fas fa-shopping-cart me-1"></i>
                            </a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_account') }}">
                                    <i class="fas fa-user me-1"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt me-1"></i>
                                </a>
                            </li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <main class="container">
            {% block body %}{% endblock %}
        </main>

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </body>
</html>
